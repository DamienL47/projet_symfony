{% if star.published %}
    <article style="background-color: {{star.color}};">
        <h1>{{ star.title}}</h1>
        <img src="{{star.image}}" alt="Image de star" height="100px">
        <p>{{star.publishedDate | date("m/d/Y")}}</p>
        <a style="color: black; text-decoration: none;" href={{ path('star', {'id': star.id }) }}> Voir les détails de la célébritée </a>
    </article>
{% else %}
    <p>Cet article n'est pas publié</p>
{%endif%}